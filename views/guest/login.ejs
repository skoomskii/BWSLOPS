     </style>

</head>

   <h1>
   <center>
   <img src="../images/bwlogo.png" alt="bwsl logo" width="300" height="200" />
   </center>
   BWSLOPS, Login
   </h1>

<!--Navigation bar menu options-->
<div class="topnav">
    <a href="/" class="topnav"><i class="fa fa-home"></i></a>
  </div>

<body>

    <!--For page contents to appear in a box-->
    <div style="background: ghostwhite;
    font-size: 15px;
    padding: 10px;
    border: 1px solid lightgray;
    margin: 5px;
    opacity: 0.75;">

        <center><%- include ("../partials/messages"); %></center>

        <form action="/users/login" method="POST">
            <!--Form function to display blank boxes to input information-->
            <div class="form-group">
                <h3>Username:</h3>
                <input type="text"
                       id="username"
                       name="username"
                       placeholder="Username..."
                       class="form-control"
                       required />
            </div>

            <div class="form-group">
                <h3>Password:</h3>
                <input type="password"
                       placeholder="Password..."
                       id="password"
                       name="password"
                       class="form-control"
                       required />
            </div>

                <center>
                <button type="submit" class="button"><i class="fa fa-sign-in"></i>&nbsp;<b>LOGIN</b></button>
                </center>
        </form>

</body>
</html>